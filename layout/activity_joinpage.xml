<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/pregencybakc3"
    android:layout_height="match_parent"
    tools:context=".joinpage">

    <TextView
        android:id="@+id/textView25"
        style="@style/Widget.Material3.Snackbar.TextView"
        android:layout_width="424dp"
        android:layout_height="60dp"
        android:background="#C5C3BD"
        android:text="    회원가입"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08" />

    <EditText
        android:id="@+id/edt_joinname"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/joinlayer"
        android:ems="10"
        android:gravity="center"
        android:hint="이름"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/edt_joinnum"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/edt_joinnum"
        app:layout_constraintTop_toBottomOf="@+id/textView25" />

    <EditText
        android:id="@+id/edt_joinnick"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/joinlayer"
        android:ems="10"
        android:gravity="center"
        android:hint="닉네임"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_joinpwcheck" />

    <EditText
        android:id="@+id/edt_iotnum"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/itemlayer"
        android:ems="10"
        android:gravity="center"
        android:hint="기기 넘버"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_joinpwcheck" />

    <EditText
        android:id="@+id/m_edt_joinid"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/joinlayer"
        android:ems="10"

        android:gravity="center"
        android:hint="아이디"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/btn_check"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="@+id/btn_check"
        app:layout_constraintTop_toBottomOf="@+id/edt_joinnum" />

    <EditText
        android:id="@+id/m_edt_joinpw"
        android:layout_width="wrap_content"
        android:layout_height="40dp"

        android:layout_marginTop="12dp"
        android:background="@drawable/joinlayer"
        android:ems="10"
        android:gravity="center"
        android:hint="비밀번호"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/edt_joinpwcheck"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/edt_joinpwcheck"
        app:layout_constraintTop_toBottomOf="@+id/btn_check" />

    <EditText
        android:id="@+id/edt_joinpwcheck"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/joinlayer"

        android:ems="10"
        android:gravity="center"
        android:hint="비밀번호 재확인"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/edt_joinnick"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/edt_joinnick"
        app:layout_constraintTop_toBottomOf="@+id/m_edt_joinpw" />

    <Button
        android:id="@+id/btn_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="중복확인"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/m_edt_joinid" />

    <EditText
        android:id="@+id/edt_joinnum"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/joinlayer"
        android:ems="10"
        android:gravity="center"
        android:hint="전화번호"

        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/m_edt_joinid"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/m_edt_joinid"
        app:layout_constraintTop_toBottomOf="@+id/edt_joinname" />

    <Button
        android:id="@+id/m_btn_join"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="163dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="163dp"
        android:background="#C5C3BD"
        android:text="회원가입"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_joinnick" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="21dp"
        android:gravity="center"
        android:text="기기에 적힌 번호를 적어주세요"
        android:textColor="#1C010A"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/edt_iotnum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_joinnick" />


</androidx.constraintlayout.widget.ConstraintLayout>