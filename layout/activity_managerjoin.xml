<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/pregencybakc3"
    android:layout_height="match_parent"
    tools:context=".joinpage">

    <TextView
        android:id="@+id/textView25"
        style="@style/Widget.Material3.Snackbar.TextView"
        android:layout_width="424dp"
        android:layout_height="60dp"
        android:background="#C5C3BD"
        android:text="    회원가입"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08" />

    <EditText
        android:id="@+id/m_edt_joinid"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="103dp"
        android:layout_marginTop="179dp"

        android:layout_marginEnd="99dp"
        android:background="@drawable/joinlayer"
        android:ems="10"
        android:gravity="center"
        android:hint="아이디"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView25" />

    <EditText
        android:id="@+id/m_edt_joinpw"
        android:layout_width="wrap_content"
        android:layout_height="40dp"

        android:layout_marginTop="16dp"
        android:background="@drawable/joinlayer"
        android:ems="10"
        android:gravity="center"
        android:hint="비밀번호"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/m_edt_joinid"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/m_edt_joinid"
        app:layout_constraintTop_toBottomOf="@+id/m_edt_joinid" />

    <Button
        android:id="@+id/m_btn_join"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="163dp"
        android:layout_marginTop="40dp"
        android:background="#C5C3BD"
        android:text="회원가입"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/m_edt_joinpw"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/m_edt_joinpw"
        app:layout_constraintTop_toBottomOf="@+id/m_edt_joinpw" />


</androidx.constraintlayout.widget.ConstraintLayout>